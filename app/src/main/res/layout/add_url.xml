<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rLayout1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/color8">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My URL"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="25dp"/>

            <ImageView
                android:id="@+id/imgClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_clear"
                android:layout_alignParentEnd="true"
                android:padding="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/rLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Please insert valid URL.You can change this anytime"/>

            <EditText
                android:id="@+id/txtUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:hint="Enter url"
                android:paddingLeft="5dp"
                android:layout_below="@+id/text1"
                android:paddingRight="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/url_text_style"/>

            <Button
                android:id="@+id/bAdd"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtUrl"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Add"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textSize="20dp"
                android:textColor="@color/color1"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
