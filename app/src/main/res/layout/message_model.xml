<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp">


        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sendMsgTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:hint="send message date"
                android:textColor="@color/iconColor"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/msgSend"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:layout_below="@+id/sendMsgTime"
                android:hint="received message"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:textSize="@dimen/twelve"
                android:layout_centerVertical="true"
                android:textStyle="normal"
                android:background="@drawable/style_send_msg"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout2"
            android:layout_below="@+id/layout1">

            <TextView
                android:id="@+id/msgReceive"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:hint="received message"
                android:layout_below="@+id/rcvMsgTime"
                android:textColor="@color/black"
                android:textSize="@dimen/twelve"
                android:textStyle="normal"
                android:background="@drawable/style_rcv_msg"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>


            <TextView
                android:id="@+id/rcvMsgTime"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="10dp"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content"
                android:textColor="@color/iconColor"
                android:hint="Receive message date"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>