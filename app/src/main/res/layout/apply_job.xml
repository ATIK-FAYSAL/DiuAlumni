<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>


    <ScrollView
        android:id="@+id/scroll"
        android:layout_above="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Job title"
                android:textSize="18dp"
                android:textColor="@color/jobTitle"
                android:padding="3dp"
                android:gravity="start"/>

            <TextView
                android:id="@+id/txtCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Company name"
                android:gravity="start"
                android:padding="3dp"
                android:textColor="@color/companyName"
                android:textSize="@dimen/fifteendp" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="posted date"
                android:textSize="@dimen/twelve"
                android:textColor="@color/iconColor"
                android:paddingStart="5dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               android:elevation="10dp">

                <TextView
                    android:text="Job Information"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sixteen"
                    android:textColor="@color/black"
                    android:paddingStart="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:paddingStart="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Job category"
                    android:gravity="start"
                    android:padding="5dp"
                    android:textColor="@color/iconColor"
                    android:textSize="@dimen/thirteen" />


                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:paddingStart="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Job description"
                    android:gravity="start"
                    android:padding="5dp"
                    android:textColor="@color/iconColor"
                    android:textSize="@dimen/thirteen" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:paddingStart="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtExp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Job experience"
                    android:gravity="start"
                    android:padding="5dp"
                    android:textColor="@color/iconColor"
                    android:textSize="@dimen/thirteen" />


                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requirements"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:paddingStart="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtReq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Job requirements"
                    android:gravity="start"
                    android:padding="5dp"
                    android:textColor="@color/iconColor"
                    android:textSize="@dimen/thirteen" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Education"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:paddingStart="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtEdu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Education"
                    android:gravity="start"
                    android:padding="5dp"
                    android:textColor="@color/iconColor"
                    android:textSize="@dimen/thirteen" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:text="Additional Information"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sixteen"
                    android:textColor="@color/black"
                    android:paddingStart="5dp"
                    android:textStyle="bold"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Job id"
                        android:gravity="start"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:paddingStart="5dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtJobId"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Job id"
                        android:gravity="start"
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        android:textColor="@color/color7"
                        android:textSize="@dimen/thirteen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:paddingStart="5dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Location"
                        android:gravity="start"
                        android:padding="5dp"
                        android:textColor="@color/iconColor"
                        android:textSize="@dimen/thirteen" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Salary"
                        android:gravity="start"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:paddingStart="5dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtSalary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Salary"
                        android:gravity="start"
                        android:drawableLeft="@drawable/icon_taka"
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        android:textColor="@color/iconColor"
                        android:textSize="@dimen/thirteen" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Vacancy"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:paddingStart="5dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtVacancy"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Vacancy"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/iconColor"
                        android:textSize="@dimen/thirteen" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Job type"
                        android:gravity="start"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:paddingStart="5dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtType"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="type"
                        android:gravity="start"
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        android:textColor="@color/iconColor"
                        android:textSize="@dimen/thirteen" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="DeadLine"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:paddingStart="5dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtDeadLine"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="DeadLine"
                        android:gravity="start"
                        android:padding="5dp"
                        android:textColor="@color/iconColor"
                        android:textSize="@dimen/thirteen" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <TextView
                    android:text="Company information"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sixteen"
                    android:textColor="@color/black"
                    android:paddingStart="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website url"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:paddingStart="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtComUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company website url"
                    android:gravity="start"
                    android:padding="5dp"
                    android:inputType="textUri"
                    android:textColor="@color/url"
                    android:textSize="@dimen/thirteen" />


                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company location"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:paddingStart="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtComAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company location"
                    android:gravity="start"
                    android:padding="5dp"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/iconColor"
                    android:textSize="@dimen/thirteen" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:paddingStart="5dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:id="@+id/layoutPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:background="@color/white"
                        android:clickable="true"
                        android:drawableLeft="@drawable/icon_phone"
                        android:drawablePadding="3dp"
                        android:gravity="center_vertical"
                        android:hint="01XXXXXXXXX"
                        android:inputType="phone"
                        android:padding="5dp"
                        android:textColor="@color/iconColor"
                        android:textSize="13dp" />


                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".99"
                        android:background="@color/white"
                        android:clickable="true"
                        android:drawableLeft="@drawable/icon_mail"
                        android:drawablePadding="3dp"
                        android:gravity="center_vertical"
                        android:hint="example@gmail.com"
                        android:inputType="textEmailAddress"
                        android:padding="5dp"
                        android:textColor="@color/iconColor"
                        android:textSize="13dp" />





                </LinearLayout>

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="User name"
                    android:gravity="start"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:clickable="true"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/userName"
                    android:textSize="@dimen/thirteen" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/bApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_done"
            android:text="Apply now"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>