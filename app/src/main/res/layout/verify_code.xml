<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_margin="@dimen/fifteen">

        <TextView
            android:id="@+id/text"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen"
            android:textStyle="bold"
            android:text="Verification code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fifteen"/>

        <LinearLayout
            android:focusableInTouchMode="true"
            android:id="@+id/layout1"
            android:layout_below="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:padding="5dp">

            <EditText
                android:layout_weight="1"
                android:id="@+id/txtCode1"
                android:layout_width="0dp"
                android:gravity="center"
                android:background="@drawable/txt_code_style"
                android:textStyle="bold"
                android:textSize="@dimen/fifteen"
                android:maxLength="1"
                android:layout_margin="3dp"
                android:inputType="number"
                android:textColor="@color/color1"
                android:layout_height="45dp" />
            <EditText
                android:gravity="center"
                android:textStyle="bold"
                android:maxLength="1"
                android:textSize="@dimen/fifteen"
                android:layout_margin="3dp"
                android:textColor="@color/color1"
                android:layout_weight="1"
                android:background="@drawable/txt_code_style"
                android:id="@+id/txtCode2"
                android:layout_width="0dp"
                android:inputType="number"
                android:layout_height="45dp" />
            <EditText
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/fifteen"
                android:layout_margin="3dp"
                android:textColor="@color/color1"
                android:layout_weight="1"
                android:maxLength="1"
                android:id="@+id/txtCode3"
                android:inputType="number"
                android:background="@drawable/txt_code_style"
                android:layout_width="0dp"
                android:layout_height="45dp" />
            <EditText
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/fifteen"
                android:layout_margin="3dp"
                android:textColor="@color/color1"
                android:layout_weight="1"
                android:maxLength="1"
                android:id="@+id/txtCode4"
                android:background="@drawable/txt_code_style"
                android:layout_width="0dp"
                android:inputType="number"
                android:layout_height="45dp" />
            <EditText
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/fifteen"
                android:layout_margin="3dp"
                android:inputType="number"
                android:textColor="@color/color1"
                android:background="@drawable/txt_code_style"
                android:layout_weight="1"
                android:maxLength="1"
                android:id="@+id/txtCode5"
                android:layout_width="0dp"
                android:layout_height="45dp" />
            <EditText
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/fifteen"
                android:inputType="number"
                android:layout_margin="3dp"
                android:textColor="@color/color1"
                android:background="@drawable/txt_code_style"
                android:layout_weight="1"
                android:maxLength="1"
                android:id="@+id/txtCode6"
                android:layout_width="0dp"
                android:layout_height="45dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/fifteen"
            android:hint="00:00"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen"
            android:textStyle="bold" />


        <Button
            android:id="@+id/bVerify"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/txtTime"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_style1"
            android:text="Verify"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bVerify"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/fifteen"
            android:text="Resend code"
            android:padding="5dp"
            android:textColor="@color/iconColor"
            android:textSize="@dimen/thirteen"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>